{
    "name": "Handwritten_Digit_Recognition_Using_CNNs",
    "numberOfGpus": 1,
    "architecture": 
    {
        "type": "MnistModel",
        "args": {}
    },
    "dataLoader": 
    {
        "type": "MnistDataLoader",
        "args":
        {
            "dataDirectory": "data/",
            "batchSize": 128,
            "shuffle": true,
            "validationSplit": 0.1,
            "numberOfWorkers": 2
        }
    },
    "optimizer": 
    {
        "type": "Adam",
        "args":
        {
            "learningRate": 0.001,
            "weightDecay": 0,
            "amsGrad": true
        }
    },
    "loss": "negative_likelihood_loss",
    "metrics": 
    [
        "accuracy", "top_k_accuracy"
    ],
    "learningRateScheduler": 
    {
        "type": "StepLearningRate",
        "args": 
        {
            "stepSize": 50,
            "gamma": 0.1
        }
    },
    "trainer": 
    {
        "epochs": 100,
        "saveDirectory": "saved/",
        "savePeriod": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "earlyStop": 10,
        "tensorboard": true
    }
}
